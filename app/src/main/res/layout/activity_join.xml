<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.find.find_renewal.JoinActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textSize="16pt"
        android:gravity="left"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/editID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/checkID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt" />

        <Button
            android:id="@+id/idCheckBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID check"
            android:textSize="8pt"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <EditText
        android:id="@+id/editPWD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"/>

    <EditText
        android:id="@+id/editPWD2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password check"/>

    <TextView
        android:id="@+id/checkPWD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="8pt"/>

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name"/>

    <EditText
        android:id="@+id/editPho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone number except '-'"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/joinBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Join"/>

        <Button
            android:id='@+id/cancelBtn'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"/>
    </LinearLayout>

</LinearLayout>